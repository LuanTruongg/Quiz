@using Quiz.DTO.UserTestManagement;
@model List<GetUserTestResponse>
<style>
    .card {
        border: none;
    }

    .border {
        border-radius: 12px;
    }

    .score {
        background-color: #B9F6CA;
    }

    .heading1 {
        color: #0D47A1;
    }

    .text {
        color: #0D47A1;
    }

    .speed {
        background-color: #FFE082;
    }

    .char {
        font-size: 30px;
        font-weight: 700;
    }
</style>
<!-- Shop Start -->
<div class="container-fluid pt-5">
    <h3 class="cf-title-01">@ViewData["SubjectName"]</h3>
    <div class="row px-xl-5">
        <!-- Shop Product Start -->
        <style>
            @@media (max-width: 767.98px) {
                .border-sm-start-none {
                    border-left: none !important;
                }
            }
        </style>
        <section>
            <div class="container py-5">
                @{
                     foreach (var item in Model)
                     {
                        <div class="row justify-content-center mb-3">
                            <div class="col-md-12 col-xl-10">
                                <div class="card shadow-0 border rounded-3">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 col-lg-6 col-xl-9">
                                                <h5>@item.TestStructureName</h5>
                                                <p class="text-truncate mb-4 mb-md-0">Thời gian làm bài: @item.Time phút</p>
                                                <p class="text-truncate mb-4 mb-md-0">Số lượng câu hỏi: @item.NumberOfQuestions câu</p>
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                                <div class="d-flex flex-row align-items-center w-100 h-100">
                                                    <div class="p-1 px-4 d-flex flex-column align-items-center score rounded justify-content-center w-100 h-100">
                                                        @{
                                                            if (item.Score < 5)
                                                            {
                                                                    <span class="d-block char text-error">@item.Score</span>
                                                            }
                                                            else if (item.Score >= 5 && item.Score < 8)
                                                            {
                                                                    <span class="d-block char text-warning">@item.Score</span>
                                                            }
                                                            else
                                                            {
                                                                    <span class="d-block char text-success">@item.Score</span>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                     }
                }
            </div>
        </section>
        <!-- Shop Product End -->
       @*  @await Component.InvokeAsync("Pager", listTestStructure.ResultObj) *@
    </div>
</div>

<!-- Shop End -->