@using Quiz.DTO.UserTestManagement
@model GetResultUserTestResponse
<!-- Modal -->
<div id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Kết quả bài thi: @Model.Name</h5>
            </div>
            <div class="modal-body">
                <span>Số câu đúng: @Model.CorrectAnswers</span><br />
                <span>Điểm thực: @Model.Score</span>
            </div>
            <div class="modal-footer">
                <div class="d-flex flex-column">
                    @Html.ActionLink(
                    "Về trang chủ",
                    "Index",
                    "Home",
                    new { @class = "btn btn-primary btn-sm"})
                </div>
            </div>
        </div>
    </div>
</div>
