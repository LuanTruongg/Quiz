<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<style>
    .footer-color {
        background: #7dbaab;
    }

    .footer-btn {
        background: #415762;
    }

    .check-container {
        background: #7dbaab;
        height: 82px;
        width: 82px;
    }

    .iconheight {
        height: 36px;
        width: 36px;
    }

    .btn:hover {
        color: var(--bs-btn-hover-color);
        background: #415762;
        border-color: #415762;
    }

    .angle::after {
        position: absolute;
        content: "";
        height: 20px;
        width: 20px;
        top: -1px;
        left: 48%;
        background: #fff;
        clip-path: polygon(50% 50%, 0 0, 100% 0);
    }
</style>
<div class="modal-dialog d-block w-25 shadow-sm p-3 mb-5 mt-5 bg-white rounded">
    <form asp-action="PaymentSelect" asp-controller="Account" method="post">
        <div class="modal-content rounded-0">
            <div class="modal-body">
                <div class="text-center">
                    <h1 class="fw-bold">Nạp tiền</h1>
                    <p class="fw-bold">Hãy chọn mệnh giá cần nạp</p>
                    <select name="money" class="form-select">
                       <option value="10000">10.000đ</option>
                       <option value="20000">20.000đ</option>
                       <option value="50000">50.000đ</option>
                       <option value="100000">100.000đ</option>
                       <option value="200000">200.000đ</option>
                       <option value="500000">500.000đ</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center footer-color rounded-0 position-relative">
                <div class="angle "></div>
                <div class="text-center p-4 ">
                    <button type="submit" class="btn shadow-none footer-btn text-white rounded-0 px-5">Nạp tiền</button>
                </div>
            </div>
        </div>
    </form>
</div>